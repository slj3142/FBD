Function JSON_IsFound(json, path) Result( isFound )
    Implicit None
    type(typJSON), pointer       :: json
    Character(len=*), intent(in) :: path
    Logical                      :: isFound
!! -------------------------------------------------------------------------- !!
    Call jsonCore%Info(json, path, isFound)
!! -------------------------------------------------------------------------- !!
End Function
