Subroutine JSON_Remove(json, path)
!! -------------------------------------------------------------------------- !!
    Implicit None
    type(typJSON), pointer       :: json
    Character(len=*), intent(in) :: path
!! -------------------------------------------------------------------------- !!
    Call jsonCore%Remove_if_present( json, path )
!! -------------------------------------------------------------------------- !!
End Subroutine
